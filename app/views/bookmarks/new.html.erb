<h1>New Bookmark</h1>

<%= form_with(model: @bookmark, url: bookmarks_path, local: true) do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :url %><br>
    <%= form.text_field :url %>
  </div>

  <div>
    <%= form.label :list_id %><br>
    <%= form.collection_select(:list_id, List.all, :id, :name) %>
  </div>

  <div>
    <%= form.submit 'Create Bookmark' %>
  </div>
<% end %>

<p><%= link_to 'Back', list_path(@bookmark.list) %></p>
